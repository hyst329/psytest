@{
    ViewData["Title"] = "Checkout";
    int mCount = ViewBag.MetricCount;
}

<h2>Step 4 of 4</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @for (int i = 1; i <= mCount; i++)
    {
        <h4>Metric #@(i)</h4>
        <table>
            <tr>
                <td><label for="name@(i)">Metric name: </label></td>
                <td><input id="name@(i)" type="text" name="name@(i)" size="50" placeholder="Write text here" required/> </td>
            </tr>
            <tr>
                <td><label for="directQuestions@(i)">Direct questions: </label></td>
                <td><input id="directQuestions@(i)" type="text" name="directQuestions@(i)" size="50" placeholder="Write numbers of questions here, e.g. 1,3,5-8,13-16" required /> </td>
            </tr>
            <tr>
                <td><label for="inverseQuestions@(i)">Inverse questions: </label></td>
                <td><input id="inverseQuestions@(i)" type="text" name="inverseQuestions@(i)" size="50" placeholder="Write numbers of questions here, e.g. 1,3,5-8,13-16" required /> </td>
            </tr>
            <tr>
                <td><label for="expr@(i)">Post-transformation expression: </label></td>
                <td><input id="expr@(i)" type="text" name="expr@(i)" size="50" placeholder="Write an expression using X for the computed sum, e.g. X * 2 + 5" /> </td>
            </tr>
        </table>
        <hr />
    }
    <hr />
    <input type="submit" name="Go" value="Previous" class="btn btn-default" />
    <input type="submit" name="Go" value="Finish" class="btn btn-primary" />
}