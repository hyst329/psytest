@model IEnumerable<psytest.Models.Test>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hidden)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hidden)
            </td>
            <td>
                @if (item.Hidden)
                {
                    <a class="btn btn-warning" asp-action="ToggleHide" asp-route-id="@item.Id">Show</a>
                }
                else
                {
                    <a class="btn btn-warning" asp-action="ToggleHide" asp-route-id="@item.Id">Hide</a>
                }
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
